  (*) --> "User"
if "isLoged" then
  ->[true] "ShowPizzaAvailableOnPDV()"

  if "Command()?" then
   ->[no] "CheckingPizzaRecipes"
   else
      -->[yes] ===ORDERING===
     endif

     if "OnLinePay?" then
   	-->[yes] "Paiement()"
   	--> "Page.ConfirmationCde()" as render
   	--> ===PREPARE_ORDER===
     else
   	-->[no] "Idle_Paiement()"
   	--> render
     endif

   else
     -->[false] "AccountCreate()"
     --> ===PREPARE_ORDER===
   endif

   if "Do redirect?" then
    ->[yes] "redirect request"
    --> ==BEFORE_DESTROY===
   else
    if "Do Forward?" then
     -left->[yes] "Forward request"
     --> ==BEFORE_DESTROY===
    else
     -right->[no] "Render page template"
     --> ==BEFORE_DESTROY===
    endif
   endif

   --> "Page.onDestroy()"
